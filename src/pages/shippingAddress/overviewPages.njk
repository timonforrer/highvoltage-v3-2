    'de-ch': 'Adresse',
    'en-gb': 'Address'
  },
  checkout: {
    'de-ch': 'Zur Bezahlung mit Kreditkarte',
    'en-gb': 'Go to checkout with credit card'
  },
  chooseCountry: {
    'de-ch': 'W채hle ein Land',
    'en-gb': 'Choose a country'
  },
  city: {
    'de-ch': 'Stadt',
    'en-gb': 'City'
  },
  shippingAddress: {
    'de-ch': 'Lieferadresse',
    'en-gb': 'Shipping address'
  },
  country: {
    'de-ch': 'Land',
    'en-gb': 'Country'
  },
  email: {
    'de-ch': 'E-Mail',
    'en-gb': 'E-mail'
  },
  error: {
    'de-ch': 'Fehler: bitte 체berpr체fe das Formular.',
    'en-gb': 'Error: please check the form.'
  },
